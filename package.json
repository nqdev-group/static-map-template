{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "static-map-template",
  "version": "1.0.0",
  "description": "A template project for static map applications using Node.js and TypeScript",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "clean": "rimraf dist .tsbuildinfo",
    "copyfiles": "copyfiles -u 1 \"public/**/*\" dist/public/ && copyfiles -u 1 \"views/**/*\" dist/views/",
    "copy-package": "copyfiles -u 0 package.json package-lock.json .env.example dist/",
    "copy-env": "copyfiles -u 0 .env dist/",
    "build": "npm run clean && tsc --build && tsc-alias && gulp build:icons --verbose && npm run copyfiles && npm run copy-package",
    "start": "node dist/src/index.js",
    "dev": "nodemon --watch src --ext js,ts,json --exec ts-node -r tsconfig-paths/register src/index.js --ignore src/scripts/",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js --ignore-pattern public/*",
    "lint:fix": "eslint src/**/*.js --fix --ignore-pattern public/*",
    "format": "prettier --write \"src/**/*.js\" --ignore-path .prettierignore"
  },
  "keywords": [],
  "author": "Nguyễn Hữu Quý",
  "license": "MIT",
  "dependencies": {
    "@otplib/preset-browser": "^12.0.1",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-validator": "^7.3.0",
    "helmet": "^7.1.0",
    "html5-qrcode": "^2.3.8",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "vietqr": "^1.1.9",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "gulp": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-transform-paths": "^3.5.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}